@model MotCua.Model.User
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
    <meta charset="utf-8" />
    <title>Hệ thống Một cửa</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <meta content="" name="description" />
    <meta content="" name="f7deat" />
    <!-- BEGIN PLUGIN CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="~/Content/animate.min.css" rel="stylesheet" />
    <!-- END PLUGIN CSS -->
    <!-- BEGIN CORE CSS FRAMEWORK -->
    <link href="~/Content/webarch.css" rel="stylesheet" />
    <!-- END CORE CSS FRAMEWORK -->
</head>
<!-- END HEAD -->
<!-- BEGIN BODY -->
<body class="error-body no-top lazy">
    <div class="container">
        <div class="row login-container animated fadeInUp">
            <div class="col-md-7 col-md-offset-2 tiles white no-padding">
                <div class="p-t-30 p-l-40 p-b-20 xs-p-t-10 xs-p-l-10 xs-p-b-10">
                    <h2 class="normal">
                        Đăng nhập hệ thống Một Cửa
                    </h2>
                    <div role="tablist">
                        <a href="#tab_login" class="btn btn-primary btn-cons" role="tab" data-toggle="tab">Đăng nhập</a> hoặc&nbsp;&nbsp;
                        <a href="#tab_register" class="btn btn-info btn-cons" role="tab" data-toggle="tab">Đăng ký</a>
                    </div>
                </div>
                <div class="tiles grey p-t-20 p-b-20 no-margin text-black tab-content">
                    <div role="tabpanel" class="tab-pane active" id="tab_login">
                        @TempData["RegisterSuccess"]
                        @ViewBag.Error
                        <form class="animated fadeIn validate" method="post" action="/Home/Index">
                            <div class="row form-row m-l-20 m-r-20 xs-m-l-10 xs-m-r-10">
                                <div class="col-md-6 col-sm-6">
                                    <input class="form-control" id="login_username" name="UserId" placeholder="ID" required>
                                </div>
                                <div class="col-md-6 col-sm-6">
                                    <input class="form-control" id="login_pass" name="Password" placeholder="Mật khẩu" type="password" required>
                                </div>
                            </div>
                            <div class="row p-t-10 m-l-20 m-r-20 xs-m-l-10 xs-m-r-10">
                                <div class="control-group col-md-10">
                                    <div class="checkbox checkbox check-success">
                                        <a href="#">Không thể đăng nhập?</a>&nbsp;&nbsp;
                                        <input id="checkbox1" type="checkbox" value="1">
                                        <label for="checkbox1">Giữ tôi đăng nhập</label>
                                    </div>
                                </div>
                            </div>
                            <div class="row p-t-10 m-l-20 m-r-20 xs-m-l-10 xs-m-r-10">
                                <div class="control-group col-md-10">
                                    <button class="btn btn-success" type="submit">Đăng nhập</button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div role="tabpanel" class="tab-pane" id="tab_register">
                        <form class="animated fadeIn validate" id="" action="/Home/Register" method="post">
                            <div class="row form-row m-l-20 m-r-20 xs-m-l-10 xs-m-r-10">
                                <div class="col-md-12">
                                    <input class="form-control" id="ID" type="text" disabled value="ID của bạn: @ViewBag.ID">
                                </div>
                            </div>
                            <div class="row form-row m-l-20 m-r-20 xs-m-l-10 xs-m-r-10">
                                <div class="col-md-6 col-sm-6">
                                    <input class="form-control" id="reg_username" name="FullName" placeholder="Họ và tên" type="text" required>
                                </div>
                                <div class="col-md-6 col-sm-6">
                                    <input class="form-control" id="reg_pass" name="Password" placeholder="Mật khẩu" type="password" required>
                                </div>
                            </div>
                            <div class="row form-row m-l-20 m-r-20 xs-m-l-10 xs-m-r-10">
                                <div class="col-md-12">
                                    <input class="form-control" id="reg_mail" name="Address" placeholder="Địa chỉ" type="text" required>
                                </div>
                            </div>
                            <div class="row form-row m-l-20 m-r-20 xs-m-l-10 xs-m-r-10">
                                <div class="col-md-6 col-sm-6">
                                    <input class="form-control" id="reg_first_Name" name="Email" placeholder="Email" type="email" required>
                                </div>
                                <div class="col-md-6 col-sm-6">
                                    <input class="form-control" id="reg_first_Name" name="PhoneNumber" placeholder="Số điện thoại" type="tel" required>
                                </div>
                            </div>
                            <div class="row form-row m-l-20 m-r-20 xs-m-l-10 xs-m-r-10">
                                <div class="col-md-12">
                                    <input class="form-control" id="reg_email" name="DateOfBirth" type="date" required>
                                </div>
                            </div>
                            <div class="row form-row m-l-20 m-r-20 xs-m-l-10 xs-m-r-10">
                                <div class="col-md-12">
                                    <select class="form-control" name="Gender">
                                        <option value="">--Chọn giới tính--</option>
                                        <option value="true">Nam</option>
                                        <option value="false">Nữ</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row form-row m-l-20 m-r-20 xs-m-l-10 xs-m-r-10">
                                <div class="col-md-12">
                                    <button class="btn btn-success btn-block" type="submit">Đăng Ký</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END CONTAINER -->
    <!-- BEGIN JS DEPENDECENCIES-->
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Content/plugins/jquery-numberAnimate/jquery.animateNumbers.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <!-- END CORE JS DEPENDECENCIES-->
    <!-- BEGIN CORE TEMPLATE JS -->
    <script src="~/Content/js/webarch.js"></script>
    <!-- END CORE TEMPLATE JS -->
</body>
</html>