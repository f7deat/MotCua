@model IEnumerable<MotCua.Model.Group>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<p>
    <button class="btn btn-success" data-toggle="modal" data-target="#myModal" data-whatever="0">Thêm mới</button>
</p>
<div class="row">
    <div class="col-md-12">
        <div class="grid simple ">
            <div class="grid-title no-border">
                <h4>Khoa Viện</h4>
                <div class="tools">
                    <a href="javascript:;" class="collapse"></a>
                    <a href="#grid-config" data-toggle="modal" class="config"></a>
                    <a href="javascript:;" class="reload"></a>
                    <a href="javascript:;" class="remove"></a>
                </div>
            </div>
            <div class="grid-body no-border">
                <div class="alert alert-danger"><i class="fa fa-exclamation-circle" aria-hidden="true"></i> Chú ý: <b>admin</b> và <b>sutdent</b> không được xóa hay sửa đổi!</div>
                <table class="table table-bordered no-more-tables">
                    <thead>
                        <tr>
                            <th>
                                Khoa Viện
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.GroupName)
                                </td>
                                <td>
                                    
                                    <button class = "btn btn-small btn-info" data-toggle="modal" data-target="#myModal" data-whatever="@item.GroupId">Sửa</button>
                                    @Html.ActionLink("Details", "Details", new { id = item.GroupId }, new { @class = "btn btn-small btn-primary" })
                                    @Html.ActionLink("Delete", "Delete", new { id = item.GroupId }, new { @class = "btn btn-small btn-danger" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <br>
                <i class="fa fa-credit-card fa-7x"></i>
                <p class="no-margin">Sau khi thêm hoặc sửa khoa, viện sẽ nằm bên trái màn hình, bạn cần đăng xuất để thấy điều này! </p>
                <br>
            </div>
            <div class="modal-body">
                <div class="row form-row">
                    <div class="col-md-12">
                        <input type="hidden" id="ID"/>
                        <input type="text" class="form-control" placeholder="Tên khoa, viện" name="GroupName" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-primary">Lưu</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->

@section scripts {
    <script>
        $('#myModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var recipient = button.data('whatever');
            var modal = $(this);
            modal.find('#ID').val(recipient);
        });
    </script>
}